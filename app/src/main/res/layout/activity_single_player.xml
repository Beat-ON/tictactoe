<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_player_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".singleplayer.SinglePlayer">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/wood1png" />
    <ImageView
        android:id="@+id/restart_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_restart2"
        app:layout_constraintTop_toBottomOf="@id/draw_ll"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp"

        >

    </ImageView>


    <LinearLayout
        android:id="@+id/xo_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/ll3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/luckiest_guy"
            android:text="X - "
            android:gravity="end"
            android:layout_gravity="center"
            android:textSize="72sp">

        </TextView>

        <TextView
            android:id="@+id/xutti"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="start"
            android:layout_gravity="center"
            android:textSize="48sp"
            android:fontFamily="@font/luckiest_guy">

        </TextView>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="center"
            android:fontFamily="@font/luckiest_guy"
            android:text="O - "
            android:textSize="72sp">


        </TextView>
        <TextView
            android:id="@+id/outti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="start"
            android:layout_gravity="center"
            android:text="0"
            android:fontFamily="@font/luckiest_guy"
            android:textSize="48sp">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/draw_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Draw - "
            android:layout_gravity="center"
            android:textSize="56sp"
            android:gravity="end"
            android:fontFamily="@font/luckiest_guy">

        </TextView>
        <TextView
            android:id="@+id/drawutti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="start"
            android:layout_gravity="center"
            android:text="0"
            android:fontFamily="@font/luckiest_guy"
            android:textSize="48sp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:paddingVertical="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/text21"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:fontFamily="@font/luckiest_guy"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_2"
            android:text=""
            android:textSize="64sp">
        </TextView>
        <TextView
            android:id="@+id/text22"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:fontFamily="@font/luckiest_guy"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_2"
            android:text=""
            android:textSize="64sp">
        </TextView>
        <TextView
            android:id="@+id/text23"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/luckiest_guy"
            android:background="@drawable/rectangle_2"
            android:text=""
            android:textSize="64sp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        >
        <TextView
            android:id="@+id/text31"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:fontFamily="@font/luckiest_guy"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_2"
            android:text=""
            android:textSize="64sp">
        </TextView>
        <TextView
            android:id="@+id/text32"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/luckiest_guy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_2"
            android:text=""
            android:textSize="64sp">
        </TextView>
        <TextView
            android:id="@+id/text33"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/luckiest_guy"
            android:background="@drawable/rectangle_2"
            android:text=""
            android:textSize="64sp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll3"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:id="@+id/text11"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/luckiest_guy"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_2"
            android:text=""
            android:textSize="64sp">
        </TextView>
        <TextView
            android:id="@+id/text12"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:fontFamily="@font/luckiest_guy"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_2"
            android:text=""
            android:textSize="64sp">
        </TextView>
        <TextView
            android:id="@+id/text13"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:fontFamily="@font/luckiest_guy"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_2"
            android:text=""
            android:textSize="64sp">
        </TextView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
